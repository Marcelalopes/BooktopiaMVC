@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2 class="text-light">Login</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div><br />
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Senha</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Lembre-se de mim
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark">Entrar</button>
                </div>
                <div>
                    <p>
                        <a class="text-dark text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Recuperar minha senha</a>
                    </p> 
                    <p> 
                        <a class="text-dark text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastra uma nova conta</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-3 col-md-offset-2">
        <section>
            <div style="height:50px"></div>
            <img src="~/css/Imagens/logoHorizontal.png"/>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
