@model MVCBooktopia.Models.AluguelModel

@{
    ViewData["Title"] = "Devolver Livro";
}

<h1 class="text-center">Devolução de Livro</h1>

<hr />
<h6>Tem certeza que deseja devolver este livro?</h6>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Devolver">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="hidden" asp-for="ClienteId" />
                <label asp-for="Cliente" class="control-label text-dark"></label>
                <dd class = "col-sm-10">
                     @Html.DisplayFor(model => model.Cliente.Nome)
                </dd>
                <dd class = "col-sm-10">
                     @Html.DisplayFor(model => model.ClienteId)
                </dd>                
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="LivroId" />
                <label asp-for="Livro" class="control-label text-dark"></label>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Livro.Titulo)
                </dd>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.LivroId)
                </dd>
                <span asp-validation-for="LivroId" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="hidden" asp-for="DataAluguel" />
                <label asp-for="DataAluguel" class="control-label text-dark"></label>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DataAluguel)
                </dd>
                <span asp-validation-for="DataAluguel" class="text-danger"></span>
            </div>
            <div class="btn-toolbar text-center" role="group">
    <div class="form-group btn-group  p-3">
        <input type="submit" value="Devolver" class="btn text-light" style="background-color:#d98737" />
    </div>
    <hr />
    <div class="btn-group  p-3">
        <a class="btn" style="color:#d98737; border: 1px solid #d98737;" asp-action="Index">Voltar</a>
    </div>
</div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
