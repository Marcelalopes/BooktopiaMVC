@model IEnumerable<MVCBooktopia.Models.AluguelModel>

@{
    ViewData["Title"] = "Aluguéis Pendentes";
}

<h1 class="text-center">Lista de Aluguéis Pendentes</h1>

<div class="hstack gap-3">
  <a class="btn text-light" style="background-color:#d98737" asp-action="Create"><i class="bi bi-plus-square"></i></a>
  <a class="btn" style="color:#d98737; border: 1px solid #d98737;" asp-action="Devolvidos">Alugueis Concluídos</a>
</div>

<table class="table uk-table uk-table-hover uk-table-striped" id="tabelas">
    <thead>
        <tr id="tabela-aluguel">
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livro.Titulo)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.DataAluguel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDevolucao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Multa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            if(item.Devolvido == false)
            {
                <tr id="tabela-aluguel">
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Livro.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataAluguel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataDevolucao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Multa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </td>                
                    
                    <td>
                        <a class="btn text-light" style="background-color:#d98737" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-card-text"></i></a>    
                    </td>
                    <td>
                        <a class="btn text-light" style="background-color:#d98737" asp-action="Devolver" asp-route-id="@item.Id"><i class="bi bi-check-square"></i></a>
                    </td>
                </tr>
            }
            
        }
    </tbody>
</table>