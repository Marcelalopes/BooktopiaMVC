@model MVCBooktopia.Models.LivroModel

@{
    ViewData["Title"] = "Desativar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Desativar</h1>

<h4>Você deseja realmente desativar este livro?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Desativar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input type="hidden" asp-for="Titulo" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input type="hidden" asp-for="Descricao" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLancamento" class="control-label"></label>
                <input type="hidden" asp-for="DataLancamento" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataLancamento)
        </dd>
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <input type="hidden" asp-for="Categoria" />
            <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input type="hidden" asp-for="Autor" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input type="hidden" asp-for="Valor" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Desativar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
