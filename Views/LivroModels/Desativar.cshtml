@model MVCBooktopia.Models.LivroModel

@{
    ViewData["Title"] = "Desativar Livro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-light">Desativar Livro</h1>

<h6>Você deseja realmente desativar este livro?</h6>
<hr />
<div class="row text-light">
    <div class="col">
        <form asp-action="Desativar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label text-dark"></label>
                <input type="hidden" asp-for="Titulo" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label text-dark"></label>
                <input type="hidden" asp-for="Descricao" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLancamento" class="control-label text-dark"></label>
                <input type="hidden" asp-for="DataLancamento" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataLancamento)
        </dd>
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label text-dark"></label>
                <input type="hidden" asp-for="Categoria" />
            <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label text-dark"></label>
                <input type="hidden" asp-for="Autor" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label text-dark"></label>
                <input type="hidden" asp-for="Valor" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="btn-toolbar text-center" role="group">
                <div class="form-group btn-group w-50 p-3">
                    <input type="submit" value="Desativar" class="btn btn-dark" />
                </div>
                <hr />
                <div class="btn-group w-50 p-3">
                    <a class="btn btn-outline-dark" asp-action="Index">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
