<div class="btn-toolbar text-center" role="group">
    <div class="form-group btn-group w-50 p-3">
        <a class="btn text-light" style="background-color:#d98737" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    </div>
    <hr />
    <div class="btn-group w-50 p-3">
        <a class="btn text-light" style="background-color:#d98737" asp-action="Index">Voltar</a>
    </div>
